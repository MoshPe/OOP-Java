package Game;

public class FourInARow extends Game{

	public FourInARow(String player1,String player2) {
		super(6,7,new Player(player1,'W'),new Player(player2,'B'));
	}
	
	@Override
	protected boolean doesWin(int i,int j) {
		return maxLineContaining(i, j);
	}
	
	@Override
	protected boolean onePlay(Player p) {
		int col,count;
		while (true) {
			count=0;
			System.out.print(p + ",Please enter a column to play: ");
			col = s.nextInt();
			while(count!=n&&isEmpty(count, col))
				count++;
			if (!this.isEmpty(x, y))
				System.out.println("There is a piece there already");
			else {
				this.set(x, y, p);
				System.out.println(this.toString());
				return doesWin(x, y);
			}
		}
	}
}

