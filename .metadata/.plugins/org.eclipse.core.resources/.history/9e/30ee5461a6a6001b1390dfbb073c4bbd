package circuits;

public class AndGate extends Gate {
	private static final String AND_GATE = "AND";
	
	public AndGate(Gate[] inGates) {
		super(inGates);
	}

	@Override
	protected boolean func(boolean[] inValues) {
		for (boolean bool : inValues)
			if(bool == false)
				return false;
		return true;
	}

	@Override
	public String getName() {
		return AND_GATE;
	}

	@Override
	public Gate simplify() {
		// TODO Auto-generated method stub
		return null;
	}
	
	public static void main(String[] argc) {
		Gate[] gates =  { TrueGate.instance(), FalseGate.instance(), TrueGate.instance() };
		Gate a = new AndGate(gates);
		System.out.println(a.calc());
		System.out.println(a);
	}

}
