package images;

public class RGB {
	private double blue, green, red;

	public RGB(double green, double red, double blue) {
		this.red = red;
		this.green = green;
		this.blue = blue;
	}

	public RGB(double grey) {

	}

	public double getRed() { return red; }

	public double getBlue() { return blue; }

	public double getGreen() { return green; }

	public RGB invert() {
		
	}
	
	public static RGB superpose(RGB rgb1, RGB rgb2) {
		
	}
	
	public static RGB mix(RGB rgb1, RGB rgb2, double alpha) {
		
	}
	@Override
	public String toString() {
		return String.format("<%.4lf, %.4lf, %.4lf>", red, green, blue);
	}
}
