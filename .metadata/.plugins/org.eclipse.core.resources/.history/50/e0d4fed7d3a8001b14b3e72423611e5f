package images;

public class TwoColorImage extends BaseImage{
	private RGB zero, one;
	private Func1 func;
	public TwoColorImage(int width, int height, RGB zero, RGB one, TwoDFunc func){
		super(width, height);
		this.zero = zero;
		this.one = one;
		this.func = func;
	}
	@Override
	public RGB get(int x, int y) {
		double temp = func.f((double)x,(double)y);
		if(temp <= 0)
			return zero;
		else if(temp >= 1)
			return one;
		else
			return RGB.mix(zero, one, temp);
	}
	public static void main(String[] argc) {
		Image i = new TwoColorImage(200, 100, RGB.BLACK, 
				RGB.RED, new Func1());
				Displayer.display(i);

	}
}
